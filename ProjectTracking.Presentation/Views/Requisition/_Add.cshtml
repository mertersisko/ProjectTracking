@using ProjectTracking.DataAccess.Entites.Classes.DbClasses.RequestClasses;
@model Requisition
@{
    ViewData["Title"] = "Add";
}

    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Talep Oluştur</h5></li>
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">
                    <svg width="17" height="17" viewbox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                    Anasayfa
                </a>
            </li>
            <li class="breadcrumb-item active"><a asp-controller="Requisition" asp-action="Index">Talepler</a></li>
        </ol>
    </div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                        <form class="needs-validation" novalidate="" asp-controller="Requisition" asp-action="Add">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="mb-3 row">
                                        <label asp-for="RequisitionName" for="exampleFormControlInputfirst" class="form-label"></label>
                                        <div class="col-6">
                                            <input asp-for="RequisitionName" type="text" class="form-control" id="exampleFormControlInputfirst">
                                            <span asp-validation-for="RequisitionName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label asp-for="StartDate" for="exampleFormControlInputthree" class="form-label"></label>
                                        <div class="col-6">
                                            <input asp-for="StartDate" type="date" class="form-control" id="exampleFormControlInputthree">
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label asp-for="RequisitionDescription" class="form-label"></label>
                                        <div class="col-lg-12">
                                            <textarea asp-for="RequisitionDescription" rows="3" class="form-control"></textarea>
                                            <span asp-validation-for="RequisitionDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label asp-for="ProjectId" class="form-label"></label>
                                        <div class="col-lg-6">
                                            <select class="form-select" asp-for="ProjectId" asp-items="@ViewBag.Projects">
                                                <option value="0" disable selected>Lütfen Proje Seçiniz</option>
                                            </select>
                                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <div class="col-lg-8 ms-auto">
                                            <button type="submit" class="btn btn-primary">Kaydet</button>
                                            <a asp-controller="Requisition" asp-action="Index" class="btn btn-danger light ms-1">İptal</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
